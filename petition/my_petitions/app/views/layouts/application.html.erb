<!DOCTYPE html>
<html>
<head>
  <title>MyPetitions</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div id="user_header">
    <tr>
  <th>Онлайн петиции нашего района</th>
  <% if current_user %>
   <th><%= current_user.email  %>
    <th><%=link_to "Выйти", session_path("rr"), method: "delete" %></th>

    <th><%=link_to 'Создать петицию', new_petition_path %></th>

  <% else %>
  <th><%=link_to 'Зарегистрироваться', new_user_path %> or
   </th>
  <th><%=link_to 'Войти', new_session_path %></th>
  </tr>

  <% end %>


    </div>
    <% flash.each do |name, msg| %>
      <% content_tag :div, msg, id: "flash#{name}" %>
     <% end %>

    <%= yield %>
  </div>
  </body>
</html>
