   <h2>Новая Петиция</h2>
  <%= form_for @petition do  |f| %>
 <div class="form-goup">
    <%= f.label :Название %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :Описание %><br>
    <%= f.text_area :text %>
  </div>
 
  <div class="actions">
    <%= submit_tag 'Создать', class: 'btn btn-success' %>
  </div>
<% end %>